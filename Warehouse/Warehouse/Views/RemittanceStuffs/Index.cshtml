@model IEnumerable<Warehouse.Models.RemittanceStuff>

@{
    ViewData["Title"] = "اقلام";
}

<h1>اقلام حواله انبار</h1>

<p>
    <a asp-action="Create">جدید</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                کد حواله انبار
            </th>
            <th>
                تجهیز
            </th>
            <th>
                تعداد
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Remittance.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stuff.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Count)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">ویرایش</a> |
                <a asp-action="Details" asp-route-id="@item.Id">جزئیات</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">حذف</a>
            </td>
        </tr>
}
    </tbody>
</table>
