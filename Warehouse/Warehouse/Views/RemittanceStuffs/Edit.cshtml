@model Warehouse.Models.RemittanceStuff

@{
    ViewData["Title"] = "ویرایش";
}

<h4>ویرایش تجهیر حواله انبار</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StuffId" class="control-label"></label>
                <select asp-for="StuffId" class="form-control" asp-items="ViewBag.StuffId"></select>
                <span asp-validation-for="StuffId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Count" class="control-label"></label>
                <input asp-for="Count" class="form-control" />
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="ثبت" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">بازگشت</a>
</div>

