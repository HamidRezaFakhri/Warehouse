@model Warehouse.Models.Remittance

@{
    ViewData["Title"] = "جزئیات";
}

<div>
    <h4>حواله</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            کد
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class = "col-sm-2">
            نوع حواله
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RemittanceType)
        </dd>
