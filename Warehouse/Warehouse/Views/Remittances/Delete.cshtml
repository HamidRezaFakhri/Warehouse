@model Warehouse.Models.Remittance

@{
    ViewData["Title"] = "حذف حواله";
}

<h3>آیا اطمینان از حذف دارید?</h3>
<div>
    <h4>حذف حواله</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            کد
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class = "col-sm-2">
            نوع
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RemittanceType)
        </dd>
        <dt class = "col-sm-2">
            تاریخ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InDate)
        </dd>
        <dt class = "col-sm-2">
            شرح
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="حذف" class="btn btn-danger" /> |
        <a asp-action="Index">بازگشت</a>
    </form>
</div>
